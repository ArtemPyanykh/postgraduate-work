\newcommand{\fpofs}[1]{\ensuremath{\phi_{#1}^{+1/2}}}

% First player lottery for p in [p_k^even, p_k^odd]
\newcommand{\fpels}[1]{\ensuremath{\lambda_{#1}^{+0}}}
% First player lottery for p in [p_k^odd, p_k+1^even]
